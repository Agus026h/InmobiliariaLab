@model IEnumerable<devs.Models.Propietario>

@{
    ViewData["Title"] = "Propietarios";
}

<h1>Listado de Propietarios</h1>

<p>
    <a asp-action="Crear">Crear Nuevo Propietario</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.IdPropietario)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Nombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Apellido)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Dni)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Telefono)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.IdPropietario)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Nombre)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Apellido)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Dni)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Telefono)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                
                <td>
                    <div class="btn-group" role ="group"> 
                    <a class = "btn btn-primary" asp-action="Editar" asp-route-id="@item.IdPropietario" title="Editar">
                      <i class="fa-solid fa-pen"></i>
                    </a>
                    
                    
                    <a class="btn btn-secundary"asp-action="Detalles" asp-route-id="@item.IdPropietario" title = "Detalles">
                      <i class="fa-solid fa-eye"></i>
                    </a> 
                    

                    <form asp-action="Borrar" asp-route-id="@item.IdPropietario" method="post"
                     onsubmit="return confirm('Seguro que desea borrar este propietario?');"
                     style="display:inline;">
                      <button type="submit" class="btn btn-danger" title="Eliminar">
                       <i class="fa-solid fa-trash"></i>
                      </button>
                    </form>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>