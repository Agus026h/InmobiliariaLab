@using Google.Protobuf.WellKnownTypes
@model devs.Models.Contrato

@{
    ViewData["Title"] = "Crear";
    //var listaInquilinos = (IList<Inquilino>)ViewBag.Inquilinos;
    //var listaInmuebles = (IList<Inmueble>)ViewBag.Inmuebles;
}

<h4>Nuevo Contrato</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        
     
        <form asp-action = "Crear" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            
           

            <div class="form-group">
                <label asp-for="FechaInicio" class="control-label"></label>
                <input type= "date" id="FechaInicio" asp-for="FechaInicio" class="form-control check-field" required />
                <span asp-validation-for="FechaInicio" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FechaFinOriginal" class="control-label"></label>
                <input type= "date" id="FechaFinOriginal" asp-for="FechaFinOriginal" class="form-control check-field" required/>
                <span asp-validation-for="FechaFinOriginal" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MontoMensual" class="control-label"></label>
                <input asp-for="MontoMensual" class="form-control" required/>
                <span asp-validation-for="MontoMensual" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Estado" class="control-label"></label>
                <select asp-for="Estado" class="control-label" required>
                   <option value="true">Activo</option>
                   <option value="false">Inactivo</option>

                </select>
                <span asp-validation-for="Estado" class="text-danger"></span>

                <div class="form-group">
             <label asp-for="IdInmueble" class="control-label">Inmueble</label>
    
              <select id="IdInmueble" class="form-control check-field" name="IdInmueble" ></select>
              <span asp-validation-for="IdInmueble" class="text-danger"></span>
             </div>

             <div class="form-group">
             <label asp-for="IdInquilino" class="control-label ">Inquilino</label>
    
             <select id="IdInquilino" class="form-control" name="IdInquilino" required></select>
             <span asp-validation-for="IdInquilino" class="text-danger"></span>
            </div>
            
            @* </div>
            <div class="form-group">
                <label asp-for="IdInmueble" class="control-label">Inmueble</label>
                 <select class="form-control form-select" name="IdInmueble">
                    @foreach(var Item in listaInmuebles)
                    {
                     <option value="@Item.IdInmueble"> @(Item.ToString())</option>

                    }


                </select>
                <span asp-validation-for="IdInmueble" class="text-danger"></span>

            </div>

            <div class="form-group">
				<label asp-for="IdInquilino" class="control-label ">Inquilino</label>
				<select class="form-control form-select" name="IdInquilino">
					@foreach (var item in listaInquilinos)
					{
						<option value="@item.IdInquilino">@(item.ToString())</option>
					}
				</select>
				<span asp-validation-for="IdInquilino" class="text-danger"></span>
			</div> *@
            <div class="form-group d-flex justify-content-between"> 
                
                
                <button type="button" id="btnVerificarDisponibilidad" class="btn btn-info">
                    Verificar Disponibilidad
                </button>
                
                
                <button type="submit" id="btnCrearContrato" class="btn btn-light btn-disabled-style" disabled>
                    Crear Contrato
                </button>
            </div>
        </form>
    </div>
</div>
@if (ViewBag.Mensaje != null)
{
    <div class="alert alert-info">
        @ViewBag.Mensaje
    </div>
}

@section Scripts {
    <script type ="text/javascript">
    $(document).ready(function() {
        
    
        $('#IdInmueble').select2({
            language : "es",
            theme: 'bootstrap',
            placeholder: "Buscar inmueble por direccion..",
            minimumInputLength: 3, 
            maximumInputLength: 50,
            ajax: {
                delay: 250,
                dataType: "json",
                cache: true,
                url: function(params){
                    let q = params.term ? encodeURIComponent(params.term) : "";
                  
                    return `/Inmueble/Buscar/${q}`; 
                },
                processResults: function (res){
                    return {
                       
                        results: res.results.map(i => ({
                            id: i.idInmueble, 
                            text: `${i.direccion} (${i.uso} - $${i.precio})` 
                        }))
                    };
                }
            }
        });


        $('#IdInquilino').select2({
            language : "es",
            theme: 'bootstrap',
            placeholder: "Buscar inquilino por Nombre..",
            minimumInputLength: 2,
            maximumInputLength: 50,
            ajax: {
                delay: 250,
                dataType: "json",
                cache: true,
                url: function(params){
                    let q = params.term ? encodeURIComponent(params.term) : "";
                   
                    return `/Inquilino/Buscar/${q}`; 
                },
                processResults: function (res){
                    return {
                        
                        results: res.datos.map(p => ({
                            id: p.idInquilino, 
                            text: `${p.nombre} ${p.apellido} (${p.dni})` 
                        }))
                    };
                }
            }
        });

        function desactivarCrearYMostrarMensaje(mensaje) {
            let $btnCrear = $('#btnCrearContrato');
            
            
            $btnCrear.prop('disabled', true);
            
            //cambio las clases del boton
            $btnCrear.removeClass('btn-primary').addClass('btn-light btn-disabled-style'); 

            $('#mensajeDisponibilidad').remove(); 
            if (mensaje) {
                $('<div id="mensajeDisponibilidad" class="alert alert-warning mt-2">' + mensaje + '</div>').insertAfter('#btnVerificarDisponibilidad');
            }
        }


        $('.check-field').on('change', function() {
            
            desactivarCrearYMostrarMensaje('Verifique la disponibilidad antes de crear');
        });

        $('#btnVerificarDisponibilidad').on('click', function() {
            let fechaInicio = $('#FechaInicio').val();
            let fechaFin = $('#FechaFinOriginal').val();
            let idInmueble = $('#IdInmueble').val(); 

            
            if (!fechaInicio || !fechaFin || !idInmueble) {
                alert('Debe seleccionar la fecha de inicio, fecha de fin y el inmueble');
                return;
            }

           
            let $btn = $(this);
            $btn.prop('disabled', true).text('Verificando...');
            $('#mensajeDisponibilidad').remove(); 
            
            
            $.ajax({
                url: `@Url.Action("VerificarDisponibilidad", "Contrato")`, 
                type: 'GET',
                data: {
                    idInmueble: idInmueble,
                    fechaInicio: fechaInicio,
                    fechaFin: fechaFin
                },
                success: function(res) {
                    let $btnCrear = $('#btnCrearContrato');
                    if (res.disponible) {
                        
                        $('#btnCrearContrato').prop('disabled', false);
                        $btnCrear.removeClass('btn-light btn-disabled-style').addClass('btn-primary');
                        $('<div id="mensajeDisponibilidad" class="alert alert-success mt-2"> Inmueble disponible!</div>').insertAfter($btn);
                    } else {
                        
                        desactivarCrearYMostrarMensaje(res.mensaje);
                    }
                },
                error: function() {
                    desactivarCrearYMostrarMensaje('Error al verificar la disponibilidad');
                },
                complete: function() {
                    
                    $btn.prop('disabled', false).text('Verificar Disponibilidad');
                }
            });
        });


});

    </script>
}

