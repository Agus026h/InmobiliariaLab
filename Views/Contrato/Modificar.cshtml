@model devs.Models.Contrato

@{
    ViewData["Title"] = "Modificar";
    var listaInquilinos = (IList<Inquilino>)ViewBag.Inquilinos;
    var listaInmuebles = (IList<Inmueble>)ViewBag.Inmuebles;
}

<h4>Editar Contrato</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        
     
        <form asp-action = "Modificar" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
              <label asp-for="IdContrato" class="control-label"></label>
                <input asp-for="IdContrato" class="form-control" readonly/>
                <span asp-validation-for="IdContrato" class="text-danger"></span>

            </div>
           

            <div class="form-group">
                <label asp-for="FechaInicio" class="control-label"></label>
                <input type= "date" asp-for="FechaInicio" class="form-control" />
                <span asp-validation-for="FechaInicio" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FechaFinOriginal" class="control-label"></label>
                <input type= "date" asp-for="FechaFinOriginal" class="form-control" />
                <span asp-validation-for="FechaFinOriginal" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FechaFinEfectiva" class="control-label"></label>
                <input type= "date" asp-for="FechaFinEfectiva" class="form-control" />
                <span asp-validation-for="FechaFinEfectiva" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MontoMensual" class="control-label"></label>
                <input asp-for="MontoMensual" class="form-control" />
                <span asp-validation-for="MontoMensual" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Estado" class="control-label"></label>
                <select asp-for="Estado" class="control-label">
                   <option value="true">Activo</option>
                   <option value="false">Inactivo</option>

                </select>
                <span asp-validation-for="Estado" class="text-danger"></span>
            </div>

            <div class="form-group">
             <label asp-for="IdInmueble" class="control-label">Inmueble</label>
    
              <select id="IdInmueble" class="form-control" name="IdInmueble"></select>
              <span asp-validation-for="IdInmueble" class="text-danger"></span>
             </div>

             <div class="form-group">
             <label asp-for="IdInquilino" class="control-label ">Inquilino</label>
    
             <select id="IdInquilino" class="form-control" name="IdInquilino"></select>
             <span asp-validation-for="IdInquilino" class="text-danger"></span>
            </div>




            @*sin busqueda asincronica 
            <div class="form-group">
                <label asp-for="IdInmueble" class="control-label">Inmueble</label>
                 <select class="form-control form-select" name="IdInmueble">
                    @foreach(var Item in listaInmuebles)
                    {
                      <option selected="@(Item.IdInmueble == Model.IdInmueble)" value="@Item.IdInmueble"> @(Item.ToString())</option>

                    }


                </select>
                <span asp-validation-for="IdInmueble" class="text-danger"></span>

            </div>

            <div class="form-group">
				<label asp-for="IdInquilino" class="control-label ">Inquilino</label>
				<select class="form-control form-select" name="IdInquilino">
					@foreach (var item in listaInquilinos)
					{
						<option selected ="@(item.IdInquilino == Model.IdInquilino)" value="@item.IdInquilino">@(item.ToString())</option>
					}
				</select>
				<span asp-validation-for="IdInquilino" class="text-danger"></span>
			</div> *@
            <div class="form-group">
                <button type="submit"  class="btn btn-primary ">Modificar</button>
                
            </div>
        </form>
    </div>
</div>
@if (ViewBag.Mensaje != null)
{
    <div class="alert alert-info">
        @ViewBag.Mensaje
    </div>
}
@section Scripts {
    <script type ="text/javascript">
    $(document).ready(function() {
        
    
        $('#IdInmueble').select2({
            language : "es",
            theme: 'bootstrap',
            placeholder: "Buscar inmueble por direccion..",
            minimumInputLength: 3, 
            maximumInputLength: 50,
            ajax: {
                delay: 250,
                dataType: "json",
                cache: true,
                url: function(params){
                    let q = params.term ? encodeURIComponent(params.term) : "";
                  
                    return `/Inmueble/Buscar/${q}`; 
                },
                processResults: function (res){
                    return {
                       
                        results: res.results.map(i => ({
                            id: i.idInmueble, 
                            text: `${i.direccion} (${i.uso} - $${i.precio})` 
                        }))
                    };
                }
            }
        });


        $('#IdInquilino').select2({
            language : "es",
            theme: 'bootstrap',
            placeholder: "Buscar inquilino por Nombre..",
            minimumInputLength: 2,
            maximumInputLength: 50,
            ajax: {
                delay: 250,
                dataType: "json",
                cache: true,
                url: function(params){
                    let q = params.term ? encodeURIComponent(params.term) : "";
                   
                    return `/Inquilino/Buscar/${q}`; 
                },
                processResults: function (res){
                    return {
                        
                        results: res.datos.map(p => ({
                            id: p.idInquilino, 
                            text: `${p.nombre} ${p.apellido} (${p.dni})` 
                        }))
                    };
                }
            }
        });

     var idInmuebleOriginal = "@Model?.IdInmueble"; 
     var textoInmuebleOriginal = "@(Model?.InmuebleC?.ToString())"; 

       if (idInmuebleOriginal && idInmuebleOriginal !== "0" && textoInmuebleOriginal) {
   
        var option = new Option(textoInmuebleOriginal, idInmuebleOriginal, true, true);
        $('#IdInmueble').append(option).trigger('change');
    }


    var idInquilinoOriginal = "@Model?.IdInquilino"; 
    var textoInquilinoOriginal = "@Model?.InquilinoC?.ToString()"; 

    if (idInquilinoOriginal && idInquilinoOriginal !== "0" && textoInquilinoOriginal) {
    
    var option = new Option(textoInquilinoOriginal, idInquilinoOriginal, true, true);
    $('#IdInquilino').append(option).trigger('change');
    }
});

    </script>
}


