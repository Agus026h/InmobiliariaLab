@model devs.Models.Usuario
@using devs.Models

@{
    ViewBag.Title = "Mi Perfil";
    
    
    var cambioClaveModel = ViewBag.CambioClave as CambioClaveView ?? new CambioClaveView();
}

<h1>@ViewBag.Title</h1>
<hr />

<div class="row">
    
    <div class="col-md-6">
        <div class="card shadow-sm mb-4">
            <div class="card-header bg-primary-subtle">
                <h5 class="mb-0">Datos del Usuario</h5>
            </div>
            <div class="card-body">
                <form asp-action="Edit" enctype="multipart/form-data">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    
                  
                    <input type="hidden" asp-for="IdUsuario" />

                    <div class="form-group mb-3">
                        <label asp-for="Nombre" class="control-label"></label>
                        <input asp-for="Nombre" class="form-control" />
                        <span asp-validation-for="Nombre" class="text-danger"></span>
                    </div>
                    <div class="form-group mb-3">
                        <label asp-for="Apellido" class="control-label"></label>
                        <input asp-for="Apellido" class="form-control" />
                        <span asp-validation-for="Apellido" class="text-danger"></span>
                    </div>
                    <div class="form-group mb-3">
                        <label asp-for="Email" class="control-label"></label>
                        <input asp-for="Email" class="form-control" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                    
                    
                    <div class="form-group mb-3">
                        <label asp-for="Avatar" class="control-label"></label><br />
                        @if(!String.IsNullOrEmpty(Model.Avatar)) 
                        {
                            <img width="64" src="@Model.Avatar" class="img-thumbnail rounded-circle" />
                        }
                        else
                        {
                            <img width="64" src="https://ui-avatars.com/api/?rounded=true&name=@Model.Nombre+@Model.Apellido" class="img-thumbnail rounded-circle" />
                        }
                        
                        <input type="file" name="AvatarFile" accept="image/*" class="form-control mt-2"/>
                    </div>
                    
                    @if (User.IsInRole("Administrador"))
                    {
                        <div class="form-group mb-3">
                            <label asp-for="Clave" class="control-label"></label>
                            <input asp-for="Clave" class="form-control" />
                        </div>
                        <div class="form-group mb-3">
                            <label asp-for="Rol" class="control-label"></label>
                            <select asp-for="Rol" class="form-control" 
                               asp-items="Html.GetEnumSelectList<devs.Models.Roles>()">
                            </select>
                            <span asp-validation-for="Rol" class="text-danger"></span>
                        </div>
                    }

                    <div class="form-group mt-3">
                        <input type="submit" value="Guardar Cambios" class="btn btn-primary" />
                    </div>
                </form>
            </div>
        </div>
    </div>

    <div class="col-md-6">
        @if (!User.IsInRole("Administrador"))
        {
            <div class="card shadow-sm">
                <div class="card-header bg-warning-subtle">
                    <h5 class="mb-0">Cambiar Contrase√±a</h5>
                </div>
                <div class="card-body">
                    @await Html.PartialAsync("_CambioClavePartial", (devs.Models.CambioClaveView)ViewBag.CambioClave)
            
                   
                  
                </div>
            </div>
        }
    </div>
</div>

<div class="mt-4">
    <a asp-action="Index">Volver al Listado</a>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}